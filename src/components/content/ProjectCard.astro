---
interface Props {
  slug: string;
  title: string;
  description: string;
  technologies: string[];
  status: string;
  github?: string;
  demo?: string;
  image?: string;
  color: string;
  featured: boolean;
  date: string;
}

const { 
  slug, 
  title, 
  description, 
  technologies, 
  status, 
  github, 
  demo, 
  image, 
  color, 
  featured 
} = Astro.props;

const statusColors: Record<string, string> = {
  "Active": "text-green-400 bg-green-400/10 border-green-400/30",
  "In Development": "text-blue-400 bg-blue-400/10 border-blue-400/30",
  "Planning": "text-orange-400 bg-orange-400/10 border-orange-400/30",
  "Experimental": "text-purple-400 bg-purple-400/10 border-purple-400/30",
  "Completed": "text-cyan-400 bg-cyan-400/10 border-cyan-400/30",
  "Archived": "text-gray-400 bg-gray-400/10 border-gray-400/30"
};

const colorMap: Record<string, string> = {
  "cyan": "cyan-400",
  "purple": "purple-400", 
  "green": "green-400",
  "yellow": "yellow-400",
  "pink": "pink-400",
  "blue": "blue-400"
};

const iconColor = colorMap[color] || "cyan-400";
---

<article class="group relative bg-card/30 backdrop-blur-sm border border-border/50 rounded-xl overflow-hidden hover:border-primary/50 transition-all duration-300 neon-card-glow">
  <!-- Featured Badge -->
  {featured && (
    <div class="absolute top-4 left-4 z-10">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/20 text-primary border border-primary/40">
        ‚≠ê Featured
      </span>
    </div>
  )}

  <!-- Project Image/Icon -->
  <div class="aspect-video bg-linear-to-br from-muted/20 to-muted/40 relative overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-br from-primary/20 to-secondary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    <div class="absolute inset-0 flex items-center justify-center">
      <div class={`w-16 h-16 rounded-full bg-${color}-400/20 border border-${color}-400/40 flex items-center justify-center`}>
        <svg class={`w-8 h-8 text-${iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Project Content -->
  <div class="p-6">
    <!-- Status Badge and Actions -->
    <div class="flex items-center justify-between mb-4">
      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border ${statusColors[status]}`}>
        {status}
      </span>
      
      <div class="flex items-center gap-2">
        {demo && demo !== "#" && (
          <a 
            href={demo}
            class="p-2 rounded-full bg-primary/10 text-primary hover:bg-primary/20 transition-colors"
            title="View Demo"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        )}
        
        {github && github !== "#" && (
          <a 
            href={github}
            class="p-2 rounded-full bg-muted/20 text-muted-foreground hover:bg-muted/40 hover:text-foreground transition-colors"
            title="View Source"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
      </div>
    </div>

    <!-- Title & Description -->
    <a href={`/project/${slug}`} class="block group/link">
      <h3 class="text-xl font-bold mb-3 text-foreground group-hover/link:neon-glow-cyan transition-all">
        {title}
      </h3>
    </a>
    
    <p class="text-muted-foreground mb-4 leading-relaxed">
      {description}
    </p>

    <!-- Technologies -->
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-muted/20 text-muted-foreground border border-muted/40">
          {tech}
        </span>
      ))}
    </div>

    <!-- Read More Link -->
    <a 
      href={`/project/${slug}`}
      class="inline-flex items-center gap-2 text-sm text-primary hover:text-primary/80 transition-colors"
    >
      Read More
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </a>
  </div>
</article>