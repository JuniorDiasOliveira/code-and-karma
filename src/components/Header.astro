---
import { Logo } from "./islands/Logo.tsx";

const currentPath = Astro.url.pathname;
---

<header class="border-b border-border/50 backdrop-blur-sm sticky top-0 z-50 bg-background/80">
  <div class="container py-4">
    <nav class="relative flex items-center justify-between">
      <a href="/">
        <div class="flex items-center gap-3">
          <Logo client:only="react" />
        </div>
      </a>

      <div class="flex gap-6 items-center">
        <a
          href="/"
          class:list={[
            "text-foreground hover:text-primary transition-colors cursor-pointer",
            currentPath === "/" && "text-primary"
          ]}
        >
          Home
        </a>
        <a
          href="/about"
          class:list={[
            "text-foreground hover:text-secondary transition-colors cursor-pointer",
            currentPath === "/about" && "text-secondary"
          ]}
        >
          About
        </a>
      </div>
    </nav>
  </div>
</header>
