---
import Icon from './Icon.astro';

export interface Props {
  href: string;
  text: string;
  variant?: 'default' | 'cta';
  class?: string;
}

const { href, text, variant = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  default: 'px-4 py-2 rounded-lg hover:bg-muted/50 transition-colors hover:text-primary',
  cta: 'px-6 py-3 rounded-lg bg-primary/10 border border-primary/30 text-primary hover:bg-primary/20 transition-all neon-button-glow'
};
---

<a 
  href={href} 
  class={`inline-flex items-center gap-2 ${variantClasses[variant]} ${className}`}
>
  <Icon name="arrow-left" size="sm" />
  <span>{text}</span>
</a>