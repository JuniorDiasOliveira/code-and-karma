---
export interface Props {
  href?: string;
  text: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  onClick?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  href, 
  text, 
  variant = 'primary', 
  size = 'md', 
  class: className = '',
  onClick,
  type = 'button'
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3',
  lg: 'px-8 py-4 text-lg'
};

const variantClasses = {
  primary: 'bg-primary/10 border border-primary/30 text-primary hover:bg-primary/20 neon-button-glow',
  secondary: 'bg-secondary/10 border border-secondary/30 text-secondary hover:bg-secondary/20',
  outline: 'border border-border/50 text-foreground hover:bg-muted/20'
};

const baseClasses = 'inline-flex items-center gap-2 rounded-lg transition-all font-medium';
const buttonClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={buttonClasses}>
    {text}
    <slot />
  </a>
) : (
  <button 
    type={type} 
    class={buttonClasses}
    onclick={onClick}
  >
    {text}
    <slot />
  </button>
)}