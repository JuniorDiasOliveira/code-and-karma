---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${post.data.title} | Code & Karma`} description={post.data.excerpt}>
  <div class="min-h-screen flex flex-col bg-background text-foreground">
    <Header />

    <main class="flex-1">
      <article class="container py-12 max-w-4xl">
        <!-- Back button -->
        <a href="/" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-muted/50 transition-colors mb-8 hover:text-primary">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span>Back to all posts</span>
        </a>

        <!-- Post header -->
        <header class="mb-12">
          <div class="flex flex-wrap gap-2 mb-4">
            {post.data.tags.map((tag) => (
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary/20 text-secondary border border-secondary/30">
                {tag}
              </span>
            ))}
          </div>

          <h1 class="text-4xl md:text-5xl font-bold mb-6 neon-gradient-text neon-glow-green">
            {post.data.title}
          </h1>

          <div class="flex flex-wrap items-center gap-6 text-muted-foreground">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>{formattedDate}</span>
            </div>

            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{post.data.readTime}</span>
            </div>

            <div>
              <span class="text-foreground font-medium">{post.data.author}</span>
            </div>
          </div>
        </header>

        <!-- Post content -->
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>

        <!-- Post footer -->
        <footer class="mt-16 pt-8 border-t border-border/50">
          <a href="/" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary/10 border border-primary/30 text-primary hover:bg-primary/20 transition-all neon-button-glow">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span>Back to all posts</span>
          </a>
        </footer>
      </article>
    </main>

    <Footer />
  </div>
</Layout>
