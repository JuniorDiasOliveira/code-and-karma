---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/layout/Header.astro";
import Footer from "../../components/layout/Footer.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();

const statusColors: Record<string, string> = {
  "Active": "text-green-400 bg-green-400/10 border-green-400/30",
  "In Development": "text-blue-400 bg-blue-400/10 border-blue-400/30", 
  "Planning": "text-orange-400 bg-orange-400/10 border-orange-400/30",
  "Experimental": "text-purple-400 bg-purple-400/10 border-purple-400/30",
  "Completed": "text-cyan-400 bg-cyan-400/10 border-cyan-400/30",
  "Archived": "text-gray-400 bg-gray-400/10 border-gray-400/30"
};

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long", 
    day: "numeric",
  });
};
---

<Layout 
  title={`${project.data.title} | Projects`}
  description={project.data.description}
>
  <div class="min-h-screen flex flex-col bg-background text-foreground">
    <Header />

    <main class="flex-1">
      <!-- Hero Section -->
      <section class="relative isolate overflow-hidden bg-[#0A0C10] py-16">
        <!-- Background effects -->
        <div
          class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(800px_400px_at_50%_110%,rgba(0,255,255,0.08),transparent_60%)]"
        >
        </div>
        
        <div class="container mx-auto px-4">
          <!-- Breadcrumb -->
          <nav class="mb-8 text-sm text-muted-foreground">
            <a href="/" class="hover:text-primary transition-colors">Home</a>
            <span class="mx-2">→</span>
            <a href="/projects" class="hover:text-primary transition-colors">Projects</a>
            <span class="mx-2">→</span>
            <span class="text-foreground">{project.data.title}</span>
          </nav>

          <div class="max-w-4xl">
            <!-- Project Header -->
            <div class="flex flex-wrap items-start justify-between gap-4 mb-8">
              <div class="flex-1 min-w-0">
                <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight select-none bg-linear-to-r from-primary via-secondary to-primary bg-clip-text text-transparent neon-heading mb-4">
                  {project.data.title}
                </h1>
                
                <p class="text-lg md:text-xl text-zinc-400 leading-relaxed mb-6">
                  {project.data.description}
                </p>
              </div>

              <!-- Project Actions -->
              <div class="flex items-center gap-3">
                {project.data.demo && project.data.demo !== "#" && (
                  <a 
                    href={project.data.demo}
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/20 border border-primary/40 text-primary hover:bg-primary/30 hover:border-primary/60 transition-all neon-button-glow"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    Live Demo
                  </a>
                )}
                
                {project.data.github && project.data.github !== "#" && (
                  <a 
                    href={project.data.github}
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-muted/40 text-muted-foreground hover:border-foreground/40 hover:text-foreground transition-all"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View Source
                  </a>
                )}
              </div>
            </div>

            <!-- Project Meta -->
            <div class="flex flex-wrap items-center gap-6 mb-8 text-sm">
              <!-- Status -->
              <div class="flex items-center gap-2">
                <span class="text-muted-foreground">Status:</span>
                <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border ${statusColors[project.data.status]}`}>
                  {project.data.status}
                </span>
              </div>

              <!-- Date -->
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="text-muted-foreground">{formatDate(project.data.date)}</span>
              </div>

              {project.data.featured && (
                <div class="flex items-center gap-2">
                  <span class="text-primary">⭐ Featured Project</span>
                </div>
              )}
            </div>

            <!-- Technologies -->
            <div class="mb-8">
              <h3 class="text-sm font-medium text-muted-foreground mb-3">Technologies Used</h3>
              <div class="flex flex-wrap gap-2">
                {project.data.technologies.map((tech) => (
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-muted/20 text-muted-foreground border border-muted/40 hover:border-primary/40 hover:text-primary transition-colors">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Project Content -->
      <section class="container py-16">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg prose-invert max-w-none">
            <Content />
          </div>
        </div>
      </section>

      <!-- Navigation -->
      <section class="container pb-16">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center justify-between pt-8 border-t border-border/50">
            <a
              href="/projects"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-muted/40 text-muted-foreground hover:border-foreground/40 hover:text-foreground transition-all"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Projects
            </a>

            <a
              href="/"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/20 border border-primary/40 text-primary hover:bg-primary/30 hover:border-primary/60 transition-all"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              Home
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>